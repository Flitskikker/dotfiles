# Settings
projectDirectory      = "$CWD"
windowTitle           = "$TM_DISPLAYNAME - $TM_DIRECTORY (git: $TM_SCM_BRANCH)"

# Extra files to include
#
myIncludes = ".tm_properties,.htaccess,.gitignore,.standalone_migrations,.env,.travis.yml,.bowerrc,.nvmrc"
